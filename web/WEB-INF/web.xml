<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    
    <display-name>MySQL DataSource Example</display-name>
 
    
    <servlet>
        <servlet-name>poemServlet</servlet-name>
        <servlet-class>com.uia.is12.view.PoemServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>verseServlet</servlet-name>
        <servlet-class>com.uia.is12.view.VerseServlet</servlet-class>
    </servlet>
    
    <welcome-file-list>
        <welcome-file>indice.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet-mapping>
        <servlet-name>poemServlet</servlet-name>
        <url-pattern>/demo/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>verseServlet</servlet-name>
        <url-pattern>/verse/*</url-pattern>
    </servlet-mapping>
</web-app>
